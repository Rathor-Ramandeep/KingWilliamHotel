@model IEnumerable<KingWilliamHotelManagementAPI.Models.TblReservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedArriveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedLeaveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumberNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedArriveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedLeaveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumberNavigation.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReservationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReservationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReservationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
